<%= form_for @task do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :completion_status, "Completion Status" %>
  <%= f.select(:completion_status, options_for_select(@completion_status_options)) %></p>

  <p><%= f.label :completion_date, "Completion Date (if applicable)" %>
  <%= f.text_field :completion_date %></p>

  <p><%= f.submit "Submit" %></p>
<% end %>
