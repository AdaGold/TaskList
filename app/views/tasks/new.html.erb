<header>
  <h3>Create a New Task</h3>
</header>

<main>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to save your task to our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>

</main>

<p> <%= link_to "Return to task list", tasks_path %> </p>