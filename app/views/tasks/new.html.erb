<h1>Create a new task!</h1>


<form name="task " action="update" method="task">
<!--   what does this underscore DO
 -->  <input type="hidden" name="_method" value="PUT">

  <label for="title"> Title: </label>
  <input type="text" name="title" id="title" value="<%= @mytask[:title] %>">


  <label for="description">Description:</label>
  <input type="text" name="title" value="<%= @mytask[:description] %>">

  <label for="body">Body:</label>
  <textarea name="body" id="body" rows="8" col="40"> <%= @mytask[:body] %> </textarea>
  <%= tag(:input, :type => "hidden",
   :name => request_forgery_protection_token.to_s,
   :value => form_authenticity_token) %>

  <button type="submit"> Submit New Task </button>
  <button type="edit"> Edit Task </button>

</form>
