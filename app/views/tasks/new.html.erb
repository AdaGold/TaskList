<h2>New Task</h2>
<%=  form_with model: @task do |f| %>
  <p>Please provide the following information to add a task:</p>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :completed_at %>
      <%= f.text_field :completed_at %>
    </div>
    <%= f.submit "Add task" %>
<% end %>