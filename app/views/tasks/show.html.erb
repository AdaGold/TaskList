<h3> Task details</h3>
<div>
<ul>
  <li>
    Task name: <%= @task.name %>
  </li>
 <li>
   Description: <%= @task.description %>
 </li>

  <%if @task.completed_at.blank?%>
    <p> Task is not completed</p>
  <%else %>
    <p> Completed: <%=@task.completed_at %></p>
  <%end %>
  <%=link_to"edit task:", task_path(@task) %>
<%= link_to "delete this task:", task_path(@task),method: :delete %>
</ul>

  <p> <%= link_to "Return to task list", tasks_path %> </p>
</div>
