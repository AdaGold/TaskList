
<!-- Display the current task -->
<h1><%= @task.title %></h1>

<article>
  <h2> Description: </h2>

  <p>
    <%= @task.description %>
  </p>

  <h2> Status: </h2>

  <!-- Display when the current task was completed-->
  <p>
    <!-- This will accurately display the current completion status! for @task.complete?-->
    <%=  check_box("task", "complete?", { class: 'Task' }, true, false)%>
    <%= @task.complete_time %>
    <%=  button_to("#{@task.complete_question} ", update_path(@task), method: "patch") %>
  </p>

  <p>
    <!-- This was for toggle... revisit later -->
    <%# link_to approve_link_text(@task),
            toggle_approve_task_path(@task),
            :remote => true %>
  </p>


  <h2> Options: </h2>
    <p>

      <%# link_to("Home", root_path) %>
      <%# link_to("Edit", edit_path(@task) ) %>

      <%= button_to("Edit This Task", {action: "edit", id: @task[:id]}, method: :get) %>

      <%= button_to("Delete This Task", {action: "destroy", id: @task[:id]}, method: :delete, data: { confirm: "Are you sure you want to delete this task from your to-do list???" }) %>

    </p>


</article>
