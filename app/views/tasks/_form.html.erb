<h1> Form Helper </h1>

<%= form_for @task, method: @method, url: action_name do |f| %>
  <%= f.label :title %> <!-- title is the name of the instance varaible to name this with -->
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name %>
<% end %>
