<h1>Edit a Task</h1>

<form name="task" action="update" method="post" accept-charset="utf-8">
 <input type="hidden" name="_method" value="PUT" >

 <label for="title">Title:</label>
 <input type="text" name="title" id="title" value="<%= @mytask[:title]%>">

 <label for="description">Description:</label>
 <input type="text" name="description" id="description" value="<%= @mytask[:description]%>" >

 <label for="details">Details:</label>
 <textarea id="details" name="details" rows="5" cols="10" >
   <%= @mytask[:details] %>
 </textarea>

 <label for="completion-status">Completion Status</label>
 <input checked="status" name="status" id="status" value="<%= @mytask[:completion_status]%>">

 <label for="completion-date">Completion Date</label>
 <input type="date" name="date" id="date" value="<%= @mytask[:completion_date]%>">

 <%= tag(:input, :type => "hidden",
   :name => request_forgery_protection_token.to_s,
   :value => form_authenticity_token) %>

 <input type="submit" value="Update Task" >

</form>
